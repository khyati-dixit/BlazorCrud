@page "/"
@inherits EmployeeListBase
<h3>Employee List</h3>
@if (Employes == null)
{
    <div class="spinner"></div>
}
else
{
<div class="card-deck">
    @foreach (var employee in Employes)
    {
        <div class="card m-2" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.FirstName @employee.LastName</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@employee.PhotoPath" />
            <div class="card-footer text-center">
                <a href="@($"employeedetails/{employee.EmpolyeeId}")" class="btn btn-success m-1">View</a>
                <a href="@($"editemploye/{employee.EmpolyeeId}")" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>


    }
</div>
}
