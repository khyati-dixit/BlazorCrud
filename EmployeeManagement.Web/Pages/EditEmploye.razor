@page "/editemployee/{id}"
@inherits EditEmployeBase

<EditForm Model="@Employe">
    <hr />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control"
                       placeholder="First Name" @bind-Value="Employe.FirstName">

            </InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            LAST Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control"
                       placeholder="Last Name" @bind-Value="Employe.LastName">

            </InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control"
                       placeholder="E-mail" @bind-Value="Employe.Email">

            </InputText>
        </div>
    </div>
    @*<div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">
            DOB
        </label>
        <div class="col-sm-10">
            <InputText id="dateOfBirth" class="form-control"
                       placeholder="DOB" @bind-Value="Employe.Gender">

            </InputText>
        </div>
    </div>*@
</EditForm>
